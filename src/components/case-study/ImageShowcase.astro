---
/**
 * ImageShowcase - Display project images with style
 * 
 * Flexible image display with multiple layout options.
 * Handles single images, grids, and side-by-side comparisons.
 * 
 * @example Single full-width
 * <ImageShowcase
 *   images={[{ src: '/images/hero.jpg', alt: 'Project hero' }]}
 *   layout="full"
 * />
 * 
 * @example Grid layout
 * <ImageShowcase
 *   images={[
 *     { src: '/img1.jpg', alt: 'Design 1', caption: 'Homepage concept' },
 *     { src: '/img2.jpg', alt: 'Design 2', caption: 'Dashboard view' },
 *   ]}
 *   layout="grid"
 * />
 * 
 * @example Side by side comparison
 * <ImageShowcase
 *   images={[
 *     { src: '/before.jpg', alt: 'Before', caption: 'Original design' },
 *     { src: '/after.jpg', alt: 'After', caption: 'New design' },
 *   ]}
 *   layout="comparison"
 *   comparisonLabels={['Before', 'After']}
 * />
 */
interface Image {
  /** Image source URL */
  src: string;
  /** Alt text for accessibility */
  alt: string;
  /** Optional caption */
  caption?: string;
}

interface Props {
  /** Array of images to display */
  images: Image[];
  /** Layout type */
  layout?: 'full' | 'contained' | 'grid' | 'asymmetric' | 'comparison' | 'stacked';
  /** Number of columns for grid layout */
  columns?: 2 | 3 | 4;
  /** Labels for comparison layout */
  comparisonLabels?: [string, string];
  /** Add glow effect */
  glow?: boolean;
  /** Background style */
  background?: 'none' | 'dark' | 'gradient';
  /** Section title */
  title?: string;
  /** Section caption/description */
  description?: string;
}

const {
  images,
  layout = 'contained',
  columns = 2,
  comparisonLabels = ['Before', 'After'],
  glow = false,
  background = 'none',
  title,
  description,
} = Astro.props;
---

<section class:list={[
  'image-showcase',
  `image-showcase--${layout}`,
  `image-showcase--bg-${background}`,
  { 'image-showcase--glow': glow }
]}>
  {(title || description) && (
    <div class="image-showcase__header">
      {title && <h3 class="image-showcase__title">{title}</h3>}
      {description && <p class="image-showcase__description">{description}</p>}
    </div>
  )}

  <div class:list={['image-showcase__container', `image-showcase__container--cols-${columns}`]}>
    {layout === 'comparison' && images.length >= 2 ? (
      <!-- Comparison Layout -->
      <Fragment>
        <div class="comparison-item">
          <span class="comparison-label comparison-label--before">{comparisonLabels[0]}</span>
          <figure class="showcase-figure">
            <img src={images[0].src} alt={images[0].alt} class="showcase-image" loading="lazy" />
            {images[0].caption && <figcaption>{images[0].caption}</figcaption>}
          </figure>
        </div>
        <div class="comparison-divider">
          <span class="divider-icon">â†’</span>
        </div>
        <div class="comparison-item">
          <span class="comparison-label comparison-label--after">{comparisonLabels[1]}</span>
          <figure class="showcase-figure">
            <img src={images[1].src} alt={images[1].alt} class="showcase-image" loading="lazy" />
            {images[1].caption && <figcaption>{images[1].caption}</figcaption>}
          </figure>
        </div>
      </Fragment>
    ) : (
      <!-- Other Layouts -->
      <Fragment>
        {images.map((image, index) => (
          <figure 
            class:list={['showcase-figure', `showcase-figure--${index + 1}`]}
            style={`--index: ${index}`}
          >
            <img 
              src={image.src} 
              alt={image.alt} 
              class="showcase-image" 
              loading="lazy" 
            />
            {image.caption && <figcaption>{image.caption}</figcaption>}
          </figure>
        ))}
      </Fragment>
    )}
  </div>
</section>

<style>
  .image-showcase {
    padding: 3rem 0;
  }

  /* Background variants */
  .image-showcase--bg-dark {
    background: rgba(0, 0, 0, 0.3);
    padding: 4rem 0;
    margin: 2rem 0;
  }

  .image-showcase--bg-gradient {
    background: linear-gradient(
      135deg,
      rgba(255, 0, 110, 0.05) 0%,
      transparent 50%,
      rgba(0, 245, 255, 0.05) 100%
    );
    padding: 4rem 0;
    margin: 2rem 0;
  }

  /* Header */
  .image-showcase__header {
    max-width: 900px;
    margin: 0 auto 2rem;
    padding: 0 2rem;
    text-align: center;
  }

  .image-showcase__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--white);
    margin: 0 0 0.5rem;
  }

  .image-showcase__description {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  /* Container */
  .image-showcase__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Full width layout */
  .image-showcase--full .image-showcase__container {
    max-width: none;
    padding: 0;
  }

  /* Contained layout */
  .image-showcase--contained .image-showcase__container {
    max-width: 900px;
  }

  /* Grid layout */
  .image-showcase--grid .image-showcase__container {
    display: grid;
    gap: 1.5rem;
  }

  .image-showcase--grid .image-showcase__container--cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .image-showcase--grid .image-showcase__container--cols-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .image-showcase--grid .image-showcase__container--cols-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  /* Asymmetric layout */
  .image-showcase--asymmetric .image-showcase__container {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    grid-template-rows: auto auto;
    gap: 1.5rem;
  }

  .image-showcase--asymmetric .showcase-figure--1 {
    grid-row: span 2;
  }

  /* Stacked layout */
  .image-showcase--stacked .image-showcase__container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Comparison layout */
  .image-showcase--comparison .image-showcase__container {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 2rem;
    align-items: start;
  }

  .comparison-item {
    position: relative;
  }

  .comparison-label {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 1;
    padding: 0.5rem 1rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 6px;
    backdrop-filter: blur(10px);
  }

  .comparison-label--before {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
  }

  .comparison-label--after {
    background: rgba(255, 0, 110, 0.2);
    color: var(--neon-pink);
  }

  .comparison-divider {
    display: flex;
    align-items: center;
    padding-top: 5rem;
  }

  .divider-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    font-size: 1.25rem;
    color: var(--neon-cyan);
  }

  /* Figure */
  .showcase-figure {
    margin: 0;
    position: relative;
  }

  .showcase-image {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 16px;
    transition: transform 0.3s var(--ease-out);
  }

  .image-showcase--glow .showcase-image {
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.4);
  }

  .showcase-figure:hover .showcase-image {
    transform: scale(1.01);
  }

  /* Caption */
  .showcase-figure figcaption {
    text-align: center;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 1rem;
    font-style: italic;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .image-showcase--grid .image-showcase__container--cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }

    .image-showcase--comparison .image-showcase__container {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .comparison-divider {
      display: none;
    }
  }

  @media (max-width: 768px) {
    .image-showcase__container {
      padding: 0 1.5rem;
    }

    .image-showcase--grid .image-showcase__container--cols-3,
    .image-showcase--grid .image-showcase__container--cols-2 {
      grid-template-columns: 1fr;
    }

    .image-showcase--asymmetric .image-showcase__container {
      grid-template-columns: 1fr;
    }

    .image-showcase--asymmetric .showcase-figure--1 {
      grid-row: auto;
    }

    .showcase-image {
      border-radius: 12px;
    }
  }
</style>
