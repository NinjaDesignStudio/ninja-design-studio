---
/**
 * CalEmbed - Cal.com booking embed component
 * 
 * Embeds Cal.com scheduling widget for booking discovery calls.
 * Supports multiple display modes and customization.
 * 
 * @example Inline embed
 * <CalEmbed calLink="ninjadesign/discovery" />
 * 
 * @example Popup button
 * <CalEmbed 
 *   calLink="ninjadesign/discovery" 
 *   mode="popup"
 *   buttonText="Book a Call"
 * />
 * 
 * @example Floating button
 * <CalEmbed 
 *   calLink="ninjadesign/discovery" 
 *   mode="floating"
 * />
 */

interface Props {
  /** Cal.com link (username/event-slug) */
  calLink: string;
  /** Display mode */
  mode?: 'inline' | 'popup' | 'floating';
  /** Button text for popup mode */
  buttonText?: string;
  /** Button variant for popup mode */
  buttonVariant?: 'primary' | 'secondary' | 'ghost';
  /** Hide event details in inline mode */
  hideEventDetails?: boolean;
  /** Custom theme colors */
  theme?: {
    brandColor?: string;
    darkMode?: boolean;
  };
  /** Prefill form data */
  prefill?: {
    name?: string;
    email?: string;
    notes?: string;
  };
}

const {
  calLink,
  mode = 'inline',
  buttonText = 'Schedule a Call',
  buttonVariant = 'primary',
  hideEventDetails = false,
  theme = {
    brandColor: '#ff006e',
    darkMode: true,
  },
  prefill = {},
} = Astro.props;

// Generate unique ID
const embedId = `cal-embed-${Math.random().toString(36).substr(2, 9)}`;

// Build config object for Cal
const calConfig = {
  hideEventTypeDetails: hideEventDetails,
  layout: 'month_view',
  theme: theme.darkMode ? 'dark' : 'light',
  styles: {
    branding: {
      brandColor: theme.brandColor,
    },
  },
  ...prefill && Object.keys(prefill).length > 0 && { prefill },
};
---

{mode === 'inline' && (
  <div class="cal-embed-inline" id={embedId}>
    <div class="cal-loading">
      <div class="cal-spinner"></div>
      <span>Loading calendar...</span>
    </div>
  </div>
)}

{mode === 'popup' && (
  <button 
    class={`cal-popup-btn btn btn-${buttonVariant}`}
    data-cal-link={calLink}
    data-cal-config={JSON.stringify(calConfig)}
    id={embedId}
  >
    <svg class="btn-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="16" y1="2" x2="16" y2="6"></line>
      <line x1="8" y1="2" x2="8" y2="6"></line>
      <line x1="3" y1="10" x2="21" y2="10"></line>
    </svg>
    {buttonText}
  </button>
)}

{mode === 'floating' && (
  <button 
    class="cal-floating-btn"
    data-cal-link={calLink}
    data-cal-config={JSON.stringify(calConfig)}
    id={embedId}
    aria-label="Schedule a call"
  >
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
      <line x1="16" y1="2" x2="16" y2="6"></line>
      <line x1="8" y1="2" x2="8" y2="6"></line>
      <line x1="3" y1="10" x2="21" y2="10"></line>
    </svg>
    <span class="floating-tooltip">Book a Call</span>
  </button>
)}

<style>
  /* Inline Embed */
  .cal-embed-inline {
    width: 100%;
    min-height: 600px;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    overflow: hidden;
  }

  .cal-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    height: 400px;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
  }

  .cal-spinner {
    width: 32px;
    height: 32px;
    border: 3px solid rgba(255, 255, 255, 0.1);
    border-top-color: var(--neon-pink);
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Cal.com iframe styling */
  .cal-embed-inline :global(iframe) {
    border-radius: 20px;
  }

  /* Popup Button */
  .cal-popup-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    cursor: pointer;
    border: none;
  }

  .btn {
    padding: 0.875rem 1.75rem;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .btn-primary {
    background: var(--gradient-pink);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 0, 110, 0.3);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--neon-cyan);
  }

  .btn-ghost {
    background: transparent;
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  .btn-ghost:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: var(--neon-cyan);
  }

  .btn-icon {
    flex-shrink: 0;
  }

  /* Floating Button */
  .cal-floating-btn {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 60px;
    height: 60px;
    background: var(--gradient-pink);
    border: none;
    border-radius: 50%;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 40px rgba(255, 0, 110, 0.4);
    transition: all 0.3s ease;
    z-index: 1000;
  }

  .cal-floating-btn:hover {
    transform: scale(1.1);
    box-shadow: 0 15px 50px rgba(255, 0, 110, 0.5);
  }

  .cal-floating-btn svg {
    transition: transform 0.3s ease;
  }

  .cal-floating-btn:hover svg {
    transform: scale(1.1);
  }

  .floating-tooltip {
    position: absolute;
    right: calc(100% + 12px);
    top: 50%;
    transform: translateY(-50%);
    padding: 0.5rem 1rem;
    background: var(--darker);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
  }

  .floating-tooltip::after {
    content: '';
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: rgba(255, 255, 255, 0.1);
  }

  .cal-floating-btn:hover .floating-tooltip {
    opacity: 1;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cal-floating-btn {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 54px;
      height: 54px;
    }

    .floating-tooltip {
      display: none;
    }
  }
</style>

<script define:vars={{ embedId, calLink, calConfig, mode }}>
  // Load Cal.com embed script
  (function() {
    // Check if Cal is already loaded
    if (window.Cal) {
      initCal();
      return;
    }

    // Load the Cal.com embed script
    const script = document.createElement('script');
    script.src = 'https://app.cal.com/embed/embed.js';
    script.async = true;
    script.onload = initCal;
    document.head.appendChild(script);

    function initCal() {
      if (!window.Cal) return;

      // Initialize Cal
      window.Cal('init', { origin: 'https://app.cal.com' });

      if (mode === 'inline') {
        // Inline embed
        const container = document.getElementById(embedId);
        if (container) {
          window.Cal('inline', {
            elementOrSelector: `#${embedId}`,
            calLink: calLink,
            config: calConfig,
          });
        }
      } else {
        // Popup or floating - use UI function
        const btn = document.getElementById(embedId);
        if (btn) {
          btn.addEventListener('click', () => {
            window.Cal('ui', {
              calLink: calLink,
              config: calConfig,
            });
          });
        }
      }
    }
  })();

  // TypeScript declaration for Cal
  declare global {
    interface Window {
      Cal: any;
    }
  }
</script>
