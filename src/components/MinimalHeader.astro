---
/**
 * MinimalHeader - Distraction-free header for landing pages
 * 
 * A stripped-down header variant that keeps focus on conversion.
 * Use for:
 * - Landing pages
 * - Conversion funnels
 * - Thank-you pages
 * - Lead magnets
 * 
 * @example Basic
 * <MinimalHeader />
 * 
 * @example With CTA
 * <MinimalHeader 
 *   ctaText="Get Started" 
 *   ctaHref="/contact"
 * />
 * 
 * @example With back link
 * <MinimalHeader 
 *   showBackLink={true}
 *   backHref="/services"
 *   backText="Back to Services"
 * />
 */
interface Props {
  /** Show logo (default: true) */
  showLogo?: boolean;
  /** Show CTA button */
  ctaText?: string;
  /** CTA link */
  ctaHref?: string;
  /** Show back link instead of nav */
  showBackLink?: boolean;
  /** Back link href */
  backHref?: string;
  /** Back link text */
  backText?: string;
  /** Header variant */
  variant?: 'default' | 'centered' | 'transparent';
  /** Dark or light mode */
  theme?: 'dark' | 'light';
}

const {
  showLogo = true,
  ctaText,
  ctaHref = '/contact',
  showBackLink = false,
  backHref = '/',
  backText = 'Back',
  variant = 'default',
  theme = 'dark',
} = Astro.props;
---

<header 
  class:list={[
    'minimal-header',
    `minimal-header--${variant}`,
    `minimal-header--${theme}`,
  ]}
  id="minimalHeader"
>
  <div class="header-container">
    {/* Left side: Logo or Back link */}
    <div class="header-left">
      {showBackLink ? (
        <a href={backHref} class="back-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19 12H5M12 19l-7-7 7-7" />
          </svg>
          <span>{backText}</span>
        </a>
      ) : showLogo ? (
        <a href="/" class="logo">
          <div class="logo-icon">
            <img src="/images/nds-logo.jpg" alt="Ninja Design Studio" />
          </div>
          <span class="logo-text">Ninja <span>Design</span></span>
        </a>
      ) : null}
    </div>

    {/* Center: Optional slot for progress or text */}
    <div class="header-center">
      <slot name="center" />
    </div>

    {/* Right side: CTA or close */}
    <div class="header-right">
      {ctaText ? (
        <a href={ctaHref} class="header-cta">
          {ctaText}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      ) : (
        <slot name="right" />
      )}
    </div>
  </div>
</header>

<style>
  .minimal-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1rem 0;
    transition: all 0.3s ease;
  }

  /* Theme: Dark */
  .minimal-header--dark {
    background: rgba(5, 5, 8, 0.9);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* Theme: Light */
  .minimal-header--light {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
  }

  /* Variant: Transparent */
  .minimal-header--transparent {
    background: transparent;
    backdrop-filter: none;
    border-bottom: none;
  }

  /* Variant: Centered */
  .minimal-header--centered .header-container {
    justify-content: center;
  }

  .minimal-header--centered .header-left,
  .minimal-header--centered .header-right {
    position: absolute;
  }

  .minimal-header--centered .header-left {
    left: 2rem;
  }

  .minimal-header--centered .header-right {
    right: 2rem;
  }

  /* Container */
  .header-container {
    max-width: 1300px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
  }

  /* Left section */
  .header-left {
    display: flex;
    align-items: center;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--white);
    transition: opacity 0.3s;
  }

  .minimal-header--light .logo {
    color: var(--dark);
  }

  .logo:hover {
    opacity: 0.8;
  }

  .logo-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    overflow: hidden;
  }

  .logo-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .logo-text {
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: -0.02em;
  }

  .logo-text span {
    font-weight: 400;
    opacity: 0.7;
  }

  /* Back link */
  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .minimal-header--light .back-link {
    background: rgba(0, 0, 0, 0.05);
    border-color: rgba(0, 0, 0, 0.1);
    color: var(--dark);
  }

  .back-link:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    color: white;
  }

  .minimal-header--light .back-link:hover {
    background: rgba(0, 0, 0, 0.1);
    border-color: rgba(0, 0, 0, 0.2);
    color: var(--dark);
  }

  .back-link svg {
    transition: transform 0.3s ease;
  }

  .back-link:hover svg {
    transform: translateX(-3px);
  }

  /* Center section */
  .header-center {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  /* Right section */
  .header-right {
    display: flex;
    align-items: center;
  }

  /* CTA Button */
  .header-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    background: var(--gradient-pink);
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .header-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 0, 110, 0.3);
  }

  .header-cta svg {
    transition: transform 0.3s ease;
  }

  .header-cta:hover svg {
    transform: translateX(3px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .header-container {
      padding: 0 1.5rem;
    }

    .logo-text {
      display: none;
    }

    .back-link span {
      display: none;
    }

    .back-link {
      padding: 0.5rem;
    }

    .header-cta {
      padding: 0.625rem 1.25rem;
      font-size: 0.8rem;
    }
  }
</style>
