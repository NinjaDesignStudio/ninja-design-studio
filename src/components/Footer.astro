<footer class="footer">
    <div class="footer-container">
        <!-- Main Footer Content -->
        <div class="footer-grid">
            <!-- Brand Column -->
            <div class="footer-brand">
                <a href="/" class="footer-logo">
                    <img src="/images/nds-logo.jpg" alt="Ninja Design Studio" class="footer-logo-img">
                    <span class="footer-logo-text">Ninja Design <span>Studio</span></span>
                </a>
                <p class="footer-tagline">
                    Premium design systems for Web3's next chapter. We help funded protocols build unforgettable brands.
                </p>
                
                <!-- Social Links -->
                <div class="footer-socials">
                    {socialLinks.map((social) => (
                        <a 
                            href={social.href} 
                            target="_blank" 
                            rel="noopener noreferrer" 
                            class="social-link"
                            aria-label={social.name}
                        >
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                <path d={socialIcons[social.icon]} />
                            </svg>
                        </a>
                    ))}
                </div>
            </div>
            
            <!-- Navigation Columns -->
            {footerNavigation.map((section) => (
                <div class="footer-nav-section">
                    <h3 class="footer-nav-title">{section.title}</h3>
                    <ul class="footer-nav-list">
                        {section.links.map((link) => (
                            <li>
                                <a href={link.href} class="footer-nav-link">
                                    {link.label}
                                </a>
                            </li>
                        ))}
                    </ul>
                </div>
            ))}
            
            <!-- CTA Column -->
            <div class="footer-cta-section">
                <h3 class="footer-nav-title">Ready to Start?</h3>
                <p class="footer-cta-text">
                    Let's discuss your project and see how we can help.
                </p>
                <a href="/contact" class="footer-cta-button">
                    Get in Touch
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </a>
            </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="footer-bottom">
            <p class="footer-copyright">
                Â© {currentYear} Ninja Design Studio. All rights reserved.
            </p>
            <div class="footer-legal">
                <a href="/privacy">Privacy</a>
                <a href="/terms">Terms</a>
            </div>
        </div>
    </div>
</footer>

<style>
    .footer {
        background: var(--darker, #050508);
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        padding: 4rem 0 2rem;
    }
    
    .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    
    .footer-grid {
        display: grid;
        grid-template-columns: 2fr 1fr 1fr 1.5fr;
        gap: 3rem;
    }
    
    /* Brand Column */
    .footer-brand {
        max-width: 320px;
    }
    
    .footer-logo {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
    }
    
    .footer-logo-img {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        object-fit: cover;
    }
    
    .footer-logo-text {
        font-family: 'Outfit', sans-serif;
        font-size: 1.25rem;
        font-weight: 700;
        color: white;
    }
    
    .footer-logo-text span {
        color: rgba(255, 255, 255, 0.5);
    }
    
    .footer-tagline {
        margin-top: 1rem;
        font-size: 0.9rem;
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.5);
    }
    
    .footer-socials {
        display: flex;
        gap: 0.75rem;
        margin-top: 1.5rem;
    }
    
    .social-link {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: rgba(255, 255, 255, 0.05);
        color: rgba(255, 255, 255, 0.5);
        transition: all 0.3s;
    }
    
    .social-link:hover {
        background: rgba(255, 0, 110, 0.2);
        color: var(--neon-pink, #ff006e);
        transform: translateY(-2px);
    }
    
    /* Navigation Sections */
    .footer-nav-section {
        /* Navigation column */
    }
    
    .footer-nav-title {
        font-size: 0.75rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.15em;
        color: rgba(255, 255, 255, 0.3);
        margin-bottom: 1.25rem;
    }
    
    .footer-nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    
    .footer-nav-link {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.6);
        text-decoration: none;
        transition: color 0.3s;
    }
    
    .footer-nav-link:hover {
        color: var(--neon-pink, #ff006e);
    }
    
    /* CTA Section */
    .footer-cta-section {
        /* CTA column */
    }
    
