---
interface Props {
    id: string;
    tag: string;
    title: string;
    description: string;
    gradientClass: string;
    stagger?: number;
    image?: string;
}

const { id, tag, title, description, gradientClass, stagger = 1, image } = Astro.props;
---

<div 
    class={`work-item ${gradientClass} reveal stagger-${stagger}`} 
    data-project-id={id}
    onclick={`openProjectModal('${id}')`}
>
    <div class="work-item-bg" style={image ? `background-image: url('${image}'); background-size: cover;` : undefined}></div>
    <div class="work-item-overlay"></div>
    <div class="work-item-content">
        <span class="work-item-tag">{tag}</span>
        <h3 class="work-item-title">{title}</h3>
        <p class="work-item-desc">{description}</p>
        <span class="work-item-link">View Project â†’</span>
    </div>
</div>
