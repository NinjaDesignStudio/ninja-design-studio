---
/**
 * SectionHeader - Consistent section title and subtitle styling
 * 
 * @example
 * <SectionHeader
 *   eyebrow="Our Work"
 *   title="Projects That Push Boundaries"
 *   subtitle="See how we've helped Web3 teams build unforgettable brands."
 * />
 * 
 * <SectionHeader title="Services" align="left" />
 */

interface Props {
  /** Small text above title */
  eyebrow?: string;
  /** Main heading */
  title: string;
  /** Subtitle/description below title */
  subtitle?: string;
  /** Text alignment */
  align?: 'left' | 'center' | 'right';
  /** Title size */
  size?: 'sm' | 'md' | 'lg' | 'xl';
  /** Gradient title */
  gradient?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  eyebrow,
  title,
  subtitle,
  align = 'center',
  size = 'lg',
  gradient = false,
  class: className = '',
} = Astro.props;

const alignments = {
  left: 'text-left',
  center: 'text-center mx-auto',
  right: 'text-right ml-auto',
};

const sizes = {
  sm: 'text-2xl md:text-3xl',
  md: 'text-3xl md:text-4xl',
  lg: 'text-4xl md:text-5xl lg:text-6xl',
  xl: 'text-5xl md:text-6xl lg:text-7xl',
};

const maxWidths = {
  left: '',
  center: 'max-w-3xl',
  right: 'max-w-3xl',
};
---

<header class:list={['section-header mb-12 md:mb-16', alignments[align], maxWidths[align], className]}>
  {eyebrow && (
    <span class="section-eyebrow inline-block mb-4 text-xs md:text-sm font-semibold uppercase tracking-[0.2em] text-pink-500">
      {eyebrow}
    </span>
  )}
  
  <h2 class:list={[
    'section-title font-bold leading-tight',
    sizes[size],
    gradient ? 'bg-gradient-to-r from-white via-white to-white/60 bg-clip-text text-transparent' : 'text-white'
  ]}>
    {title}
  </h2>
  
  {subtitle && (
    <p class="section-subtitle mt-4 md:mt-6 text-lg md:text-xl text-white/60 leading-relaxed">
      {subtitle}
    </p>
  )}
</header>

<style>
  .section-header {
    position: relative;
  }
  
  .section-eyebrow {
    font-family: 'Space Mono', monospace;
  }
  
  .section-title {
    font-family: 'Outfit', sans-serif;
  }
</style>
