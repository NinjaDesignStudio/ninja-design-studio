---
/**
 * ShareButtons - Social media share buttons
 * 
 * Provides share buttons for Twitter/X, LinkedIn, Facebook, and copy link.
 * No external scripts required - uses native share URLs.
 * 
 * @example
 * <ShareButtons 
 *   title="My Blog Post Title"
 *   url="https://example.com/blog/my-post"
 * />
 */

interface Props {
  /** Page title to share */
  title: string;
  /** URL to share (defaults to current page) */
  url?: string;
  /** Visual variant */
  variant?: 'horizontal' | 'vertical' | 'compact';
  /** Show labels */
  showLabels?: boolean;
}

const {
  title,
  url = Astro.url.href,
  variant = 'horizontal',
  showLabels = false,
} = Astro.props;

const encodedTitle = encodeURIComponent(title);
const encodedUrl = encodeURIComponent(url);

const shareLinks = [
  {
    name: 'Twitter',
    label: 'Tweet',
    href: `https://twitter.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`,
    icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>`,
    color: '#000000',
  },
  {
    name: 'LinkedIn',
    label: 'Share',
    href: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
    icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>`,
    color: '#0077b5',
  },
  {
    name: 'Facebook',
    label: 'Share',
    href: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
    icon: `<svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>`,
    color: '#1877f2',
  },
];
---

<div class:list={['share-buttons', `share-buttons--${variant}`]}>
  <span class="share-label">Share:</span>
  
  <div class="share-links">
    {shareLinks.map((link) => (
      <a 
        href={link.href}
        target="_blank"
        rel="noopener noreferrer"
        class="share-link"
        aria-label={`Share on ${link.name}`}
        data-platform={link.name.toLowerCase()}
        style={`--share-color: ${link.color}`}
      >
        <span class="share-icon" set:html={link.icon} />
        {showLabels && <span class="share-text">{link.label}</span>}
      </a>
    ))}
    
    <!-- Copy Link Button -->
    <button 
      class="share-link share-copy" 
      aria-label="Copy link"
      data-url={url}
    >
      <span class="share-icon copy-icon">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
      </span>
      <span class="share-icon check-icon" style="display: none;">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
      </span>
      {showLabels && <span class="share-text copy-text">Copy</span>}
    </button>
  </div>
</div>

<style>
  .share-buttons {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .share-label {
    font-size: 0.875rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.5);
  }

  .share-links {
    display: flex;
    gap: 0.5rem;
  }

  .share-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.375rem;
    width: 36px;
    height: 36px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .share-link:hover {
    background: var(--share-color, rgba(255, 255, 255, 0.1));
    border-color: var(--share-color, rgba(255, 255, 255, 0.2));
    color: white;
    transform: translateY(-2px);
  }

  .share-copy {
    --share-color: var(--neon-cyan);
  }

  .share-copy.copied {
    background: rgba(0, 245, 255, 0.1);
    border-color: var(--neon-cyan);
    color: var(--neon-cyan);
  }

  .share-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 18px;
    height: 18px;
  }

  .share-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .share-text {
    font-size: 0.8rem;
    font-weight: 500;
  }

  /* Variant: Vertical */
  .share-buttons--vertical {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }

  .share-buttons--vertical .share-links {
    flex-direction: column;
  }

  /* Variant: Compact */
  .share-buttons--compact .share-label {
    display: none;
  }

  .share-buttons--compact .share-link {
    width: 32px;
    height: 32px;
  }

  .share-buttons--compact .share-icon {
    width: 16px;
    height: 16px;
  }

  /* With labels */
  .share-buttons:has(.share-text) .share-link {
    width: auto;
    padding: 0 0.75rem;
  }
</style>

<script>
  // Copy link functionality
  document.querySelectorAll('.share-copy').forEach(btn => {
    btn.addEventListener('click', async () => {
      const url = btn.getAttribute('data-url');
      const copyIcon = btn.querySelector('.copy-icon');
      const checkIcon = btn.querySelector('.check-icon');
      const copyText = btn.querySelector('.copy-text');
      
      try {
        await navigator.clipboard.writeText(url || window.location.href);
        
        // Show success state
        btn.classList.add('copied');
        if (copyIcon) copyIcon.style.display = 'none';
        if (checkIcon) checkIcon.style.display = 'flex';
        if (copyText) copyText.textContent = 'Copied!';
        
        // Reset after 2 seconds
        setTimeout(() => {
          btn.classList.remove('copied');
          if (copyIcon) copyIcon.style.display = 'flex';
          if (checkIcon) checkIcon.style.display = 'none';
          if (copyText) copyText.textContent = 'Copy';
        }, 2000);
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  });
</script>
