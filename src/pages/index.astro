                    </div>
                </div>
            </div>

            <div class="video-container reveal-right" style="display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, rgba(255,0,110,0.1), rgba(0,245,255,0.1)); border: 1px solid rgba(255,255,255,0.1); aspect-ratio: auto; height: auto;">
                <div class="video-corner video-corner-tl"></div>
                <div class="video-corner video-corner-tr"></div>
                <div class="video-corner video-corner-bl"></div>
                <div class="video-corner video-corner-br"></div>
                
                <div style="text-align: center; padding: 3rem 2rem;">
                    <div style="margin-bottom: 1rem;">
                        <img src="/images/nds-logo.jpg" alt="NDS Logo" style="width: 100px; height: 100px; object-fit: contain; border-radius: 16px;">
                    </div>
                    <div style="font-size: 1.5rem; font-weight: 700; margin-bottom: 0.5rem; background: linear-gradient(135deg, #ff006e, #00f5ff); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">Ready to level up?</div>
                    <p style="color: rgba(255,255,255,0.6); margin-bottom: 1.5rem; font-size: 0.95rem;">Let's create something extraordinary together.</p>
                    <a href="/contact" class="btn btn-primary" style="display: inline-block; padding: 0.8rem 2rem;">Start Your Project ‚Üí</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section class="stats">
        <div class="container">
            <div class="stats-grid">
                {displayStats.map((stat, i) => (
                    <div class={`stat-item reveal stagger-${i + 1}`}>
                        <div class="stat-number">{stat.number}</div>
                        <div class="stat-label">{stat.label}</div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Clients Marquee -->
    <section class="clients">
        <p class="clients-label">Trusted by innovative companies</p>
        <div class="clients-track">
            <div class="clients-logos">
                {clients.map(client => (
                    <img src={`/images/clients/${client}.png`} alt={client} class="client-logo">
                ))}
            </div>
            <div class="clients-logos">
                {clients.map(client => (
                    <img src={`/images/clients/${client}.png`} alt={client} class="client-logo">
                ))}
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services" id="services">
        <div class="services-decor services-decor-1"></div>
        <div class="services-decor services-decor-2"></div>
