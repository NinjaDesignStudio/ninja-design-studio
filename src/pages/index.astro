            <div class="section-header reveal">
                <span class="section-tag">What We Do</span>
                <h2 class="section-title">Services built for the future</h2>
                <p class="section-subtitle">From AI-powered brands to enterprise blockchain, we design experiences that stand out.</p>
            </div>
            <div class="services-grid">
                {services.map((service, i) => (
                    <ServiceCard {...service} stagger={i + 1} />
                ))}
            </div>
        </div>
    </section>

    <!-- Work Section -->
    <section class="work" id="work">
        <div class="container">
            <div class="section-header reveal">
                <span class="section-tag">Selected Work</span>
                <h2 class="section-title">Projects we're proud of</h2>
                <p class="section-subtitle">A showcase of our best work across various industries.</p>
            </div>
            <div class="work-grid">
                {projects.map((project, i) => (
                    <WorkItem {...project} stagger={i + 1} />
                ))}
            </div>
        </div>
    </section>

    <!-- Testimonials Section -->
    <section class="testimonials" id="testimonials">
        <div class="container">
            <div class="section-header reveal">
                <span class="section-tag">Testimonials</span>
                <h2 class="section-title">What our clients say</h2>
                <p class="section-subtitle">Don't just take our word for it.</p>
            </div>
            <div class="testimonials-grid">
                {testimonials.map((testimonial, i) => (
                    <TestimonialCard {...testimonial} stagger={i + 1} />
                ))}
            </div>
        </div>
    </section>

    <!-- Process Section -->
    <section class="process" id="process">
        <div class="container">
            <div class="section-header reveal">
                <span class="section-tag">Our Process</span>
                <h2 class="section-title">How we bring ideas to life</h2>
                <p class="section-subtitle">A streamlined approach that ensures quality at every step.</p>
            </div>
            <div class="process-grid">
                <div class="process-step reveal stagger-1">
                    <div class="process-number">01</div>
                    <h3 class="process-title">Discovery</h3>
                    <p class="process-desc">Deep dive into your brand and goals.</p>
                </div>
                <div class="process-step reveal stagger-2">
                    <div class="process-number">02</div>
                    <h3 class="process-title">Strategy</h3>
                    <p class="process-desc">Develop creative direction and approach.</p>
                </div>
                <div class="process-step reveal stagger-3">
                    <div class="process-number">03</div>
                    <h3 class="process-title">Design</h3>
                    <p class="process-desc">Craft stunning visuals with precision.</p>
                </div>
                <div class="process-step reveal stagger-4">
                    <div class="process-number">04</div>
                    <h3 class="process-title">Delivery</h3>
