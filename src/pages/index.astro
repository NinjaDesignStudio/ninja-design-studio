                <ContactForm />
            </div>
        </div>
    </section>

    <ProjectModal />
</BaseLayout>

<script>
    // Clients marquee animation
    const track = document.querySelector('.clients-track') as HTMLElement;
    if (track) {
        let position = 0;
        const speed = 0.5;
        
        function animate() {
            position -= speed;
            const firstLogos = track.querySelector('.clients-logos') as HTMLElement;
            if (firstLogos && Math.abs(position) >= firstLogos.offsetWidth) {
                position = 0;
            }
            track.style.transform = `translateX(${position}px)`;
            requestAnimationFrame(animate);
        }
        
        animate();
    }
</script>
