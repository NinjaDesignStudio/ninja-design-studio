---
/**
 * Homepage - Award-Winning Version
 * 
 * Features all premium effects:
 * - Smooth scroll + GSAP animations
 * - Advanced cursor
 * - Magnetic buttons
 * - Text reveal animations
 * - Horizontal work showcase
 * - Marquee text
 * - Gradient mesh backgrounds
 * - Noise texture
 */
import AwardLayout from '../layouts/AwardLayout.astro';
import GradientMesh from '../components/effects/GradientMesh.astro';
import Marquee from '../components/effects/Marquee.astro';
import HorizontalShowcase from '../components/effects/HorizontalShowcase.astro';
import Newsletter from '../components/Newsletter.astro';

import { services } from '../lib/services';
import { getFeaturedTestimonials } from '../lib/testimonials';
import { stats } from '../lib/stats';

const testimonials = getFeaturedTestimonials().slice(0, 3);

const capabilities = [
  'Brand Identity',
  'UI/UX Design',
  'Websites',
  'Pitch Decks',
  'NFT Art',
  'Motion Design',
  'Web3 Products',
  'DeFi Platforms',
];
---

<AwardLayout title="Web3 Design Partners">
  
  <!-- ==========================================
       HERO SECTION
       ========================================== -->
  <section class="hero" id="hero">
    <GradientMesh opacity={0.3} />
    
    <div class="hero-content">
      <!-- Eyebrow -->
      <div class="hero-eyebrow gsap-reveal">
        <span class="eyebrow-line"></span>
        <span>Web3 Design Studio</span>
        <span class="eyebrow-line"></span>
      </div>

      <!-- Main Title -->
      <h1 class="hero-title">
        <span class="title-line gsap-chars-reveal">Design that</span>
        <span class="title-line title-gradient gsap-chars-reveal">moves markets</span>
      </h1>

      <!-- Subtitle -->
      <p class="hero-subtitle gsap-reveal">
        We craft brand systems, websites, and products for 
        <span class="highlight">funded protocols</span> and 
        <span class="highlight">DeFi projects</span> that demand excellence.
      </p>

      <!-- CTAs -->
      <div class="hero-cta gsap-reveal">
        <a href="/contact" class="btn btn-primary magnetic-strong" data-cursor="expand">
          <span class="magnetic-text-inner">Start a Project</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href="/work" class="btn btn-ghost magnetic" data-cursor="view">
          View Our Work
        </a>
      </div>

      <!-- Scroll Indicator -->
      <div class="scroll-indicator gsap-reveal">
        <div class="scroll-mouse">
          <div class="scroll-wheel"></div>
        </div>
        <span>Scroll to explore</span>
      </div>
    </div>

    <!-- Hero Visual -->
    <div class="hero-visual">
      <div class="visual-orbit">
        <div class="orbit-ring orbit-1"></div>
        <div class="orbit-ring orbit-2"></div>
        <div class="orbit-ring orbit-3"></div>
        <div class="orbit-dot dot-1"></div>
        <div class="orbit-dot dot-2"></div>
        <div class="orbit-dot dot-3"></div>
      </div>
    </div>
  </section>

  <!-- ==========================================
       CAPABILITIES MARQUEE
       ========================================== -->
  <section class="capabilities-marquee">
    <Marquee 
      items={capabilities} 
      separator=" ✦ " 
      size="lg"
      variant="outline"
      duration={40}
    />
    <Marquee 
      items={capabilities} 
      separator=" • " 
      size="md"
      variant="default"
      duration={35}
      reverse
    />
  </section>

  <!-- ==========================================
       INTRO / ABOUT SECTION
       ========================================== -->
  <section class="intro-section" id="intro">
    <div class="intro-container">
      <div class="intro-content">
        <span class="section-tag gsap-reveal">About Us</span>
        <h2 class="intro-title gsap-text-reveal">
          We've been building brands in Web3 since before DeFi had a name.
        </h2>
        <div class="intro-text gsap-stagger">
          <p>
            Most design agencies need weeks to understand blockchain. 
            We've been here for 5+ years, through multiple cycles, 
            building for protocols that raised millions.
          </p>
          <p>
            No explaining what a DEX is. No generic corporate templates. 
            Just design that speaks to your community and builds trust 
            from the first pixel.
          </p>
        </div>
        <a href="/about" class="intro-link magnetic" data-cursor="link">
          Learn more about us
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M7 17L17 7M17 7H7M17 7V17" />
          </svg>
        </a>
      </div>

      <div class="intro-stats gsap-stagger">
        {stats.slice(0, 4).map((stat) => (
          <div class="stat-card">
            <span class="stat-number gsap-counter" data-target={stat.number.replace(/\D/g, '')} data-suffix={stat.number.replace(/\d/g, '')}>
              {stat.number}
            </span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ==========================================
       SERVICES SECTION
       ========================================== -->
  <section class="services-section" id="services">
    <div class="services-container">
      <div class="services-header">
        <span class="section-tag gsap-reveal">Services</span>
        <h2 class="services-title gsap-text-reveal">
          Everything your Web3 project needs to stand out
        </h2>
      </div>

      <div class="services-grid gsap-stagger">
        {services.slice(0, 6).map((service, i) => (
          <a href={`/services/${service.slug}`} class="service-card" data-cursor="view">
            <span class="service-number">0{i + 1}</span>
            <div class="service-icon">{service.icon}</div>
            <h3 class="service-title">{service.title}</h3>
            <p class="service-description">{service.shortDescription}</p>
            <span class="service-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M7 17L17 7M17 7H7M17 7V17" />
              </svg>
            </span>
          </a>
        ))}
      </div>

      <div class="services-cta gsap-reveal">
        <a href="/services" class="btn btn-secondary magnetic">
          View All Services
        </a>
        <a href="/estimate" class="btn btn-ghost magnetic">
          Get an Estimate
        </a>
      </div>
    </div>
  </section>

  <!-- ==========================================
       HORIZONTAL WORK SHOWCASE
       ========================================== -->
  <HorizontalShowcase 
    title="Selected Work"
    subtitle="Projects that moved the needle"
    limit={5}
  />

  <!-- ==========================================
       TESTIMONIALS SECTION
       ========================================== -->
  <section class="testimonials-section" id="testimonials">
    <GradientMesh colors={['#8338ec', '#00f5ff', '#ff006e']} opacity={0.15} />
    
    <div class="testimonials-container">
      <div class="testimonials-header">
        <span class="section-tag gsap-reveal">Testimonials</span>
        <h2 class="testimonials-title gsap-text-reveal">
          Trusted by Web3's best
        </h2>
      </div>

      <div class="testimonials-grid gsap-stagger">
        {testimonials.map((t) => (
          <article class="testimonial-card">
            <div class="testimonial-rating">
              {[...Array(5)].map(() => (
                <svg viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
              ))}
            </div>
            <blockquote class="testimonial-quote">
              "{t.quote}"
            </blockquote>
            <footer class="testimonial-author">
              <div class="author-avatar">
                <span>{t.author.charAt(0)}</span>
              </div>
              <div class="author-info">
                <span class="author-name">{t.author}</span>
                <span class="author-role">{t.role}, {t.company}</span>
              </div>
            </footer>
          </article>
        ))}
      </div>

      <div class="testimonials-cta gsap-reveal">
        <a href="/testimonials" class="btn btn-ghost magnetic">
          Read All Reviews
        </a>
      </div>
    </div>
  </section>

  <!-- ==========================================
       PROCESS MARQUEE
       ========================================== -->
  <section class="process-marquee">
    <Marquee 
      items={['Discovery', 'Strategy', 'Design', 'Refinement', 'Delivery', 'Support']} 
      separator=" → " 
      size="xl"
      variant="gradient"
      duration={25}
    />
  </section>

  <!-- ==========================================
       CTA SECTION
       ========================================== -->
  <section class="cta-section" id="cta">
    <div class="cta-container">
      <div class="cta-content gsap-reveal">
        <span class="section-tag">Ready?</span>
        <h2 class="cta-title gsap-text-reveal">
          Let's build something extraordinary together
        </h2>
        <p class="cta-subtitle gsap-reveal">
          Book a free discovery call or reach out directly. 
          No pitch decks, no pressure — just a conversation.
        </p>
        <div class="cta-buttons gsap-reveal">
          <a href="/book" class="btn btn-primary btn-lg magnetic-strong" data-cursor="expand">
            <span>Book a Call</span>
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
              <line x1="16" y1="2" x2="16" y2="6"></line>
              <line x1="8" y1="2" x2="8" y2="6"></line>
              <line x1="3" y1="10" x2="21" y2="10"></line>
            </svg>
          </a>
          <a href="/contact" class="btn btn-ghost btn-lg magnetic">
            Send a Message
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- ==========================================
       NEWSLETTER
       ========================================== -->
  <Newsletter 
    variant="section"
    title="Stay ahead of the curve"
    description="Web3 design insights, case studies, and studio updates. No spam, just value."
  />

</AwardLayout>

<style>
  /* ===========================================
     HERO
     =========================================== */
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 8rem 2rem 4rem;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    text-align: center;
    max-width: 1000px;
  }

  .hero-eyebrow {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    font-family: var(--font-mono);
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 2rem;
  }

  .eyebrow-line {
    width: 40px;
    height: 1px;
    background: rgba(255, 255, 255, 0.2);
  }

  .hero-title {
    margin-bottom: 2rem;
  }

  .title-line {
    display: block;
    font-size: clamp(3rem, 10vw, 7rem);
    font-weight: 900;
    line-height: 1;
    color: var(--white);
  }

  .title-gradient {
    background: linear-gradient(135deg, var(--neon-pink), var(--neon-cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    max-width: 600px;
    margin: 0 auto 3rem;
    font-size: 1.25rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
  }

  .hero-subtitle .highlight {
    color: var(--white);
    font-weight: 500;
  }

  .hero-cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 4rem;
    flex-wrap: wrap;
  }

  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    color: rgba(255, 255, 255, 0.4);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .scroll-mouse {
    width: 24px;
    height: 40px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 20px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }

  .scroll-wheel {
    width: 4px;
    height: 8px;
    background: var(--neon-pink);
    border-radius: 4px;
    animation: scroll-bounce 2s ease infinite;
  }

  @keyframes scroll-bounce {
    0%, 100% { transform: translateY(0); opacity: 1; }
    50% { transform: translateY(10px); opacity: 0.3; }
  }

  /* Hero Visual */
  .hero-visual {
    position: absolute;
    inset: 0;
    pointer-events: none;
    opacity: 0.5;
  }

  .visual-orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
  }

  .orbit-ring {
    position: absolute;
    top: 50%;
    left: 50%;
    border: 1px solid rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    transform: translate(-50%, -50%);
  }

  .orbit-1 { width: 400px; height: 400px; }
  .orbit-2 { width: 600px; height: 600px; }
  .orbit-3 { width: 800px; height: 800px; }

  .orbit-dot {
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--neon-pink);
    border-radius: 50%;
    animation: orbit 20s linear infinite;
  }

  .dot-1 { animation-duration: 15s; }
  .dot-2 { animation-duration: 25s; animation-direction: reverse; }
  .dot-3 { animation-duration: 35s; }

  @keyframes orbit {
    from { transform: rotate(0deg) translateX(300px) rotate(0deg); }
    to { transform: rotate(360deg) translateX(300px) rotate(-360deg); }
  }

  /* ===========================================
     CAPABILITIES MARQUEE
     =========================================== */
  .capabilities-marquee {
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    background: var(--darker);
  }

  /* ===========================================
     INTRO SECTION
     =========================================== */
  .intro-section {
    padding: 8rem 2rem;
    background: var(--dark);
  }

  .intro-container {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .section-tag {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--neon-pink);
    padding: 0.5rem 1rem;
    background: rgba(255, 0, 110, 0.1);
    border-radius: 100px;
    margin-bottom: 1.5rem;
  }

  .intro-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    line-height: 1.3;
    color: var(--white);
    margin-bottom: 2rem;
  }

  .intro-text {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .intro-text p {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.7);
  }

  .intro-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    color: var(--neon-cyan);
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .intro-link:hover {
    gap: 0.75rem;
  }

  .intro-link svg {
    transition: transform 0.3s ease;
  }

  .intro-link:hover svg {
    transform: translate(4px, -4px);
  }

  .intro-stats {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .stat-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 20px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(255, 0, 110, 0.3);
    transform: translateY(-4px);
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--neon-pink), var(--neon-cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.5);
  }

  /* ===========================================
     SERVICES SECTION
     =========================================== */
  .services-section {
    padding: 8rem 2rem;
    background: var(--darker);
  }

  .services-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .services-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
  }

  .services-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    line-height: 1.3;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .service-card {
    position: relative;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 20px;
    text-decoration: none;
    transition: all 0.4s ease;
    overflow: hidden;
  }

  .service-card:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 0, 110, 0.4);
    transform: translateY(-8px);
  }

  .service-number {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: rgba(255, 255, 255, 0.2);
  }

  .service-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .service-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 0.5rem;
  }

  .service-description {
    font-size: 0.9rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 1rem;
  }

  .service-arrow {
    display: inline-flex;
    width: 32px;
    height: 32px;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    opacity: 0;
    transform: translate(-10px, 10px);
    transition: all 0.3s ease;
  }

  .service-arrow svg {
    width: 14px;
    height: 14px;
    color: var(--white);
  }

  .service-card:hover .service-arrow {
    opacity: 1;
    transform: translate(0, 0);
    background: var(--neon-pink);
    border-color: var(--neon-pink);
  }

  .services-cta {
    display: flex;
    justify-content: center;
    gap: 1rem;
  }

  /* ===========================================
     TESTIMONIALS SECTION
     =========================================== */
  .testimonials-section {
    position: relative;
    padding: 8rem 2rem;
    overflow: hidden;
  }

  .testimonials-container {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 4rem;
  }

  .testimonials-title {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    line-height: 1.3;
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .testimonial-card {
    padding: 2rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 20px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
  }

  .testimonial-card:hover {
    background: rgba(255, 255, 255, 0.06);
    transform: translateY(-4px);
  }

  .testimonial-rating {
    display: flex;
    gap: 0.125rem;
    margin-bottom: 1rem;
  }

  .testimonial-rating svg {
    width: 16px;
    height: 16px;
    color: #fbbf24;
  }

  .testimonial-quote {
    font-size: 0.95rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 1.5rem;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .author-avatar {
    width: 44px;
    height: 44px;
    background: linear-gradient(135deg, var(--neon-pink), var(--neon-cyan));
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: white;
  }

  .author-info {
    display: flex;
    flex-direction: column;
  }

  .author-name {
    font-weight: 600;
    color: var(--white);
  }

  .author-role {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.5);
  }

  .testimonials-cta {
    text-align: center;
  }

  /* ===========================================
     PROCESS MARQUEE
     =========================================== */
  .process-marquee {
    background: var(--dark);
    border-top: 1px solid rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  /* ===========================================
     CTA SECTION
     =========================================== */
  .cta-section {
    padding: 10rem 2rem;
    background: var(--darker);
    text-align: center;
  }

  .cta-container {
    max-width: 700px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 800;
    color: var(--white);
    line-height: 1.2;
    margin-bottom: 1.5rem;
  }

  .cta-subtitle {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 3rem;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* ===========================================
     BUTTONS
     =========================================== */
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: var(--gradient-pink);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 40px rgba(255, 0, 110, 0.3);
