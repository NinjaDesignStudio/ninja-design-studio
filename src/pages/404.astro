---
/**
 * 404 Page - Not Found
 *
 * Custom branded error page that helps users find their way back.
 * Uses DarkHeroLayout for consistent styling.
 */
import DarkHeroLayout from '../layouts/DarkHeroLayout.astro';
import { getCollection } from 'astro:content';

const title = "Page Not Found";
const description = "The page you're looking for doesn't exist or has been moved.";

// Popular pages to suggest
const suggestions = [
  { title: 'Our Work', href: '/work', icon: 'ðŸŽ¨' },
  { title: 'Services', href: '/services', icon: 'âš¡' },
  { title: 'About Us', href: '/about', icon: 'ðŸ‘‹' },
  { title: 'Contact', href: '/contact', icon: 'ðŸ’¬' },
];

// Get recent blog posts
const allPosts = await getCollection('blog');
const recentPosts = allPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<DarkHeroLayout title={title} description={description}>
  <section class="error-page">
    <div class="error-bg">
      <div class="error-gradient"></div>
      <div class="error-grid"></div>
    </div>

    <div class="error-container">
      <!-- Glitch Effect Number -->
      <div class="error-number" data-text="404">
        <span>404</span>
      </div>

      <!-- Content -->
      <h1 class="error-title">Lost in the metaverse</h1>
      <p class="error-message">
        The page you're looking for doesn't exist, got rugged, or maybe it was never minted in the first place.
      </p>

      <!-- Recent Blog Posts -->
      {recentPosts.length > 0 && (
        <div class="recent-posts">
          <p class="recent-label">Or check out our latest articles:</p>
          <div class="recent-list">
            {recentPosts.map((post) => (
              <a href={`/blog/${post.slug}`} class="recent-post">
                <span class="recent-title">{post.data.title}</span>
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Suggestions -->
      <div class="error-suggestions">
        <p class="suggestions-label">Try one of these instead:</p>
        <div class="suggestions-grid">
          {suggestions.map((item) => (
            <a href={item.href} class="suggestion-card">
              <span class="suggestion-icon">{item.icon}</span>
              <span class="suggestion-title">{item.title}</span>
              <svg class="suggestion-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
          ))}
        </div>
      </div>

      <!-- Home button -->
      <a href="/" class="btn btn-primary error-home">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
        </svg>
        Back to Home
      </a>
    </div>
  </section>
</DarkHeroLayout>

<style>
  .error-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 6rem 2rem;
    overflow: hidden;
  }

  /* Background effects */
  .error-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .error-gradient {
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(ellipse at 30% 20%, rgba(255, 0, 110, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse at 70% 80%, rgba(0, 245, 255, 0.1) 0%, transparent 40%);
  }

  .error-grid {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse at center, black 20%, transparent 70%);
  }

  /* Container */
  .error-container {
    position: relative;
    text-align: center;
    max-width: 600px;
  }

  /* 404 Number with glitch effect */
  .error-number {
    position: relative;
    font-size: clamp(8rem, 20vw, 14rem);
    font-weight: 900;
    letter-spacing: -0.05em;
    line-height: 1;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--neon-pink), var(--neon-cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: glitch 3s infinite;
  }

  .error-number::before,
  .error-number::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, var(--neon-pink), var(--neon-cyan));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .error-number::before {
    animation: glitch-1 2s infinite;
    clip-path: polygon(0 0, 100% 0, 100% 35%, 0 35%);
  }

  .error-number::after {
    animation: glitch-2 2s infinite;
    clip-path: polygon(0 65%, 100% 65%, 100% 100%, 0 100%);
  }

  @keyframes glitch {
    0%, 90%, 100% { opacity: 1; }
    92% { opacity: 0.8; }
    94% { opacity: 1; }
  }

  @keyframes glitch-1 {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-3px, 3px); }
    40% { transform: translate(-3px, -3px); }
    60% { transform: translate(3px, 3px); }
    80% { transform: translate(3px, -3px); }
  }

  @keyframes glitch-2 {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(3px, -3px); }
    40% { transform: translate(3px, 3px); }
    60% { transform: translate(-3px, -3px); }
    80% { transform: translate(-3px, 3px); }
  }

  /* Title & Message */
  .error-title {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    color: var(--white);
    margin-bottom: 1rem;
  }

  .error-message {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.6);
    margin-bottom: 2.5rem;
  }

  /* Recent Posts */
  .recent-posts {
    margin-bottom: 2.5rem;
  }

  .recent-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }

  .recent-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .recent-post {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.875rem 1.25rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .recent-post:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(0, 245, 255, 0.3);
  }

  .recent-title {
    font-size: 0.9rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.8);
    text-align: left;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .recent-post svg {
    flex-shrink: 0;
    color: rgba(255, 255, 255, 0.4);
    transition: all 0.3s;
  }

  .recent-post:hover svg {
    color: var(--neon-cyan);
    transform: translateX(3px);
  }

  /* Suggestions */
  .error-suggestions {
    margin-bottom: 2.5rem;
  }

  .suggestions-label {
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.5);
    margin-bottom: 1rem;
  }

  .suggestions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  .suggestion-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .suggestion-card:hover {
    background: rgba(255, 255, 255, 0.06);
    border-color: rgba(255, 0, 110, 0.3);
    transform: translateY(-2px);
  }

  .suggestion-icon {
    font-size: 1.25rem;
  }

  .suggestion-title {
    flex: 1;
    font-weight: 500;
    color: var(--white);
    text-align: left;
  }

  .suggestion-arrow {
    color: rgba(255, 255, 255, 0.4);
    transition: all 0.3s;
  }

  .suggestion-card:hover .suggestion-arrow {
    color: var(--neon-pink);
    transform: translateX(4px);
  }

  /* Home button */
  .error-home {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.75rem;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    border: none;
  }

  .btn-primary {
    background: var(--gradient-pink);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 0, 110, 0.3);
  }

  /* Responsive */
  @media (max-width: 480px) {
    .suggestions-grid {
      grid-template-columns: 1fr;
    }

    .error-number {
      font-size: 6rem;
    }
  }
</style>
