    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--gradient-pink);
    border-radius: 50%;
    font-family: 'Space Mono', monospace;
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
  }

  .service-page .step-content {
    position: relative;
    z-index: 1;
  }

  .service-page .step-title {
