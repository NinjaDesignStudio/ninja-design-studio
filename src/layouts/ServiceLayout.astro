    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .service-page .featured-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .service-page .featured-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: var(--gradient-pink);
    border-radius: 50px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }

  .service-page .featured-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    color: white;
    margin-bottom: 1rem;
  }

  .service-page .featured-description {
    font-size: 1.125rem;
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 2rem;
  }

